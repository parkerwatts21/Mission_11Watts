@{
    ViewData["Title"] = "Home Page";
}

@model Book

<div class="card m-1 p-1">
    <h3 style="padding-left: 10px; padding-top: 5px;">@Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Classification</small></span>
    </h3>
    <ul style="padding-left: 50px">
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISNB: @Model.Isbn</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>Number of Pages: @Model.PageCount</li>
        <li>Price: @Model.Price</li>
    </ul>
</div>